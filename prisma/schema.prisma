datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Gender {
  MALE
  FEMALE
  NON_BINARY
  OTHER
  PREFER_NOT_TO_SAY
}

enum WorkStatus {
  EMPLOYED
  UNEMPLOYED
  STUDENT
  RETIRED
  OTHER
}

enum RelationshipStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
  IN_RELATIONSHIP
  COMPLICATED
  OTHER
}

enum HomeStatus {
  LIVES_ALONE
  LIVES_WITH_FAMILY
  LIVES_WITH_ROOMMATES
  HOMELESS
  OTHER
}

enum ConversationState {
  IDLE
  ONBOARDING
  IN_CONVERSATION
  CHECKIN
}

model User {
  id            String    @id @default(uuid())
  phoneNumber   String    @unique // WhatsApp phone number
  name          String?
  gender        Gender?
  age           Int?
  workStatus    WorkStatus?
  relationshipStatus RelationshipStatus?
  homeStatus    HomeStatus?

  // General tracking
  lastInteraction DateTime @default(now())
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Conversation tracking
  totalMessages Int       @default(0)
  allMessages   String[]
  lastMessage   String?
  currentState  ConversationState?   // For state management

  // Recovery tracking
  triggers           String[]
  copingStrategies   String[]
  riskLevel          Int       @default(0)

  // Check-in 
  sobrietyStartDate        DateTime?
  checkInStreak      Int       @default(0)
  weeklyCheckInDate DateTime?
  dailyCheckInDate  DateTime?
  lastCheckInTime   DateTime?

  @@index([phoneNumber])
}


