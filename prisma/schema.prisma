datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(uuid())
  phoneNumber   String    @unique // WhatsApp phone number
  name          String?
  gender        String?
  age           Int?
  workStatus    String?
  relationshipStatus String?
  homeStatus       String?

  // General tracking
  lastInteraction DateTime @default(now())
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Conversation tracking
  totalMessages Int       @default(0)
  allMessages   String[]
  lastMessage   String?
  currentState  String?   // For state management

  // Recovery tracking
  triggers           String[]
  copingStrategies   String[]
  riskLevel          Int       @default(0)

  // Check-in 
  sobrietyStartDate        DateTime?
  checkInStreak      Int       @default(0)
  weeklyCheckInDate DateTime?
  dailyCheckInDate  DateTime?
  lastCheckInTime   DateTime?

  @@index([phoneNumber])
}


